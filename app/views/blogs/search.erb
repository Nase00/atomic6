<script src='/js/searches.js'></script>

<div id="wrapper">
  <form action='/blogs' method='GET'>
    <input type='submit' class='button1' value='Return to Index'>
  </form>
  <% if logged_in? %>
    <form action='../blogs/new' method='GET'>
      <input type='submit' class='button1' value='New Blog'>
    </form>
  <% end %>
</div>

<div id='wrapper'>
  <h1>Search</h1>
  <section>
    <form action='/blogs/search' method='GET'>
      <table>
        <tr>
          <th id="label">Keywords</th>
          <td id="form">
            <input id='input' type='text' name='keyword' placeholder='Type in keywords' />
            <h5>Keywords are case and order sensative</h5>
          </td>
        </tr>
      </table>
      <input id='searchButton' class='button1' type='submit' value='Search' />
      <td id="form"><input id='cancelSearch' class='button1' type='submit' value='Clear' />
    </form>
  </section>
  <div id='resultsAnchor'></div>
  <script type='template' id='resultsTemplate'>
    <br>
    <h1>Blogs containing "{{= searchedKeyword }}" in the {{= searchedParam }}</h1>
    <ol>
      {{ for(var blog in resultBlogs) { }}
        <li>
          <a href='/blogs/{{= resultBlogs[blog].id }}'>{{= resultBlogs[blog].title }}</a>
          <p>{{= resultBlogs[blog].html_content }}</p>
          <h5>
            Authored by <a href="/users/{{= resultBlogs[blog].author.id }}">{{= resultBlogs[blog].author.name }}</a> on {{= resultBlogs[blog].nice_time }}
          </h5>
        </li>
      {{ } }}
    <ol>
  </script>
</div>
