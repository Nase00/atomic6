<div id="wrapper">
	<h1>Latest Blogs</h1>
    <% latest_blogs.each do |blog| %>
    <div class="content">
      <h2 id="blogTitle"><a href='blogs/<%= blog.id %>'><%= blog.title %></a></h2>
      <h5 id="blogAuthor">Authored by: <%= blog.author.name %></h5>
      <h3 id="blogDesc"><%= blog.description %></h3>
      <div id="blogContent"><p><%= markdown(blog.content.first(500) + "...") %></p></div>
    </div>
  <% end %>
</div>
